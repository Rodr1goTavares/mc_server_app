<section class="py-16 bg-gray-800 text-center">
    <h2 class="text-3xl font-bold">Galeria do Servidor</h2>
    <div class="grid md:grid-cols-3 gap-6 mt-8 px-6">
        <img src="https://source.unsplash.com/400x300/?minecraft,village" class="rounded-lg shadow-lg">
        <img src="https://source.unsplash.com/400x300/?minecraft,castle" class="rounded-lg shadow-lg">
